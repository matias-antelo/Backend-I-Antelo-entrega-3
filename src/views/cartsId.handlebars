<main>

  {{!-- SELECTOR DE CARRITOS --}}
  {{#unless showProducts}}
  <div style="display:flex; justify-content:center; margin-top:20px;">
    <form id="carritoForm" 
          style="display:flex; align-items:center; gap:15px; background:#f5f5f5; padding:15px; border-radius:10px;">
      
      <p style="margin:0; font-weight:bold;">Seleccionar carrito</p>

      <select id="carritoSelect" style="padding:5px 10px;">
        {{#each carts}}
          <option value="{{this._id}}">{{this._id}}</option>
        {{/each}}
      </select>

      <button type="submit" 
        style="padding:8px 16px; cursor:pointer; background:#3498db; color:white; border:none; border-radius:5px;">
        Abrir carrito
      </button>
      
    </form>
  </div>
{{/unless}}

  {{!-- MOSTRAR PRODUCTOS DEL CARRITO --}}
  {{#if showProducts}}
    {{#each cart.products}}
      <div class="grilla">

        <div class="grilla-izquierda">
          <img src="/foto/producto.png" class="imagen-producto">
        </div>

        <div class="contenido">
          <p><strong>Nombre:</strong> {{this.product.title}}</p>
          <p><strong>Precio:</strong> ${{this.product.price}}</p>
          <p><strong>Cantidad:</strong> {{this.quantity}}</p>

          <button class="btn-eliminar" data-id="{{this.product._id}}">
            Eliminar del carrito
          </button>
        </div>

      </div>
    {{/each}}
  {{/if}}

</main>

<script src="/home.button.js"></script>