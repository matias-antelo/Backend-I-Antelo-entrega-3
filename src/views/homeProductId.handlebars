{{#each products}}
<div class="grilla">
  <div class="grilla-izquierda">
    <img src="/foto/producto.png" alt="Imagen producto" class="imagen-producto">
  </div>
  <div class="separador"></div>
  <div class="contenido">

    <p><strong>{{this.title}}</p>
    <p><b>Precio:</b> {{this.price}}</p>
    <p><b>Categor√≠a:</b> {{this.category}}</p>
    <p><b>Stock:</b> {{this.stock}}</p>
    <p><b>Descripcion:</b> {{this.description}}</p>

    {{#if this.available}}
    <p style="color: green ">Disponible</p>
    {{else}}
    <p style="color: red">Sin stock</p>
    {{/if}}
    <button class="btn-agregar1" data-id="{{this._id}}">Agregar al carrito</button>

  </div>
</div>
{{/each}}

<script src="/home.button.js"></script>